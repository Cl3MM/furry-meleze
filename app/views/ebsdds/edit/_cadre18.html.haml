/ Annexe
.row
  .col-md-12
    .form-group
      = f.label :collecteur_18_siret, "SIRET"
      = f.text_field :collecteur_18_siret, placeholder: "SIRET"

  .col-md-12
    .form-group
      = f.label :collecteur_18_nom, "Nom"
      = f.text_field :collecteur_18_nom, placeholder: "Nom"

  .col-md-12
    .form-group
      = f.label :collecteur_18_responsable, "Contact"
      = f.text_field :collecteur_18_responsable, placeholder: "Contact"
  .col-md-12
    .form-group
      = f.label :collecteur_18_adresse, "Adresse"
      = f.text_field :collecteur_18_adresse, placeholder: "Adresse"

  .col-md-12
    .form-group
      = f.label :collecteur_18_cp, "Code postal"
      = f.text_field :collecteur_18_cp, placeholder: "Code postal"

  .col-md-12
    .form-group
      = f.label :collecteur_18_ville, "Ville"
      = f.text_field :collecteur_18_ville, placeholder: "Ville"

.row
  .col-md-6
    .form-group
      = f.label :collecteur_18_tel, "Téléphone"
      = f.text_field :collecteur_18_tel, placeholder: "Téléphone"

  .col-md-6
    .form-group
      = f.label :collecteur_18_fax, "Fax"
      = f.text_field :collecteur_18_fax, placeholder: "Fax"

.row
  .col-md-8
    .form-group
      = f.label :collecteur_18_email, "Adresse email"
      = f.text_field :collecteur_18_email, placeholder: "Adresse email"
  .col-md-4
    .form-group
      = f.label :date_prise_en_charge_18, "Date de la prise en charge :"
      = f.text_field :date_prise_en_charge_18, placeholder: "Limite de validité", class: "datepicker", value: safe_date(:date_prise_en_charge_18)
.row
  .col-md-3
    .form-group
      = f.label :mode_transport_18, "Mode de transport"
      = f.select :mode_transport_18, [["Route", 1], ["Aérien", 2], ["Ferroviaire", 3], ["Fluvial", 3], ["Maritime", 5]]
  .col-md-3
    .form-group
      = f.label :recepisse_18, "Recepissé"
      = f.text_field :recepisse_18, placeholder: "Numéro de recepissé"
  .col-md-3
    .form-group
      = f.label :bordereau_limite_validite_18, "Limite de validité du bordereau"
      = f.text_field :bordereau_limite_validite_18, placeholder: "Limite de validité", class: "datepicker", value: safe_date(:bordereau_limite_validite_18)
  .col-md-3
    .form-group
      = f.label :transport_multimodal_18, "Transport multimodal"
      %br
      %label.radio-inline
        = f.radio_button :transport_multimodal_18, true
        Oui
      %label.radio-inline
        = f.radio_button :transport_multimodal_18, false
        Non
