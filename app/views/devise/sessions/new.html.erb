<div class="row margin-top-40">
  <div class="col-md-4 col-md-offset-4">.
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Merci de vous identifier</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <br/>
          <div class="input-group">
            <span class="input-group-addon"><%= fa_icon "user lg" %></span>
            <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Nom d'utilisateur" %>
          </div>
          <br/>
          <div class="input-group">
            <span class="input-group-addon"><%= fa_icon "lock lg" %></span>
            <%= f.password_field :password, class: "form-control", placeholder: "Mot de passe" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> MÃ©moriser mes identifiants</div>
          <% end -%>

          <br/>
          <div><%= f.submit "Connexion", class: "btn btn-primary center-block btn-lg btn-block" %></div>
        <% end %>

        <%#= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
