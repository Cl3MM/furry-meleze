            .row
              .col-md-12
                .form-group
                  = f.label :ligne_flux_email, "Adresse email"
                  = f.text_field :ligne_flux_email, placeholder: "Adresse email"

            .row
              .col-md-8
                .form-group
                  = f.label :ligne_flux_conditionnement_ult, "Type de conditionnement"
                  = f.select :ligne_flux_conditionnement_ult, DechetContenant.to_select

              .col-md-4
                .form-group
                  = f.label :ligne_flux_nombre_colis_ult, "Nombre de colis"
                  = f.select :ligne_flux_nombre_colis_ult, (1..30).map{|i| [i,i]}
