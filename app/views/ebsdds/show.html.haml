%h1.underline
  = fa_icon "tags"
  eBSDD
  %span.small
    ="##{@ebsdd.bordereau_id}"
  = fa_link_to edit_ebsdd_path(@ebsdd), "Modifier cet eBSDD", "edit lg", class: "btn btn-info pull-right"
  = fa_link_to ebsdd_download_path, "Exporter au format CSV", "cloud-download lg", class: "btn btn-warning pull-right mg-r-5"

.container

.row
  =# cadre 1
  .col-md-7
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          =# fa_icon "tags ccc"
          %span.badge 1
          Emetteur du bordereau
      .panel-body
        = render partial: "ebsdds/show/cadre1", object: @ebsdd, as: :ebsdd
