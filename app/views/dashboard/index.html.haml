%h1.underline
  = fa_icon "dashboard "
  Tableau de bord
.row.panel-fd
  .col-md-8
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = fa_icon "tags ccc"
          10 Derniers eBSDDs crées
      .panel-body
        = render partial: 'latest', object: @nouveaux, as: 'ebsdds', locals: { status: :nouveaux }
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = fa_icon "tags ccc"
          10 Derniers eBSDDs en attente
      .panel-body
        = render partial: 'latest', object: @en_attente, as: 'ebsdds', locals: { status: :en_attente }
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = fa_icon "tags ccc"
          10 Derniers eBSDDs importés
      .panel-body
        = render partial: 'latest', object: @incomplete, as: 'ebsdds', locals: { status: :incomplet }
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = fa_icon "tags ccc"
          10 Derniers eBSDDs complets
      .panel-body
        = render partial: 'latest', object: @complete, as: 'ebsdds', locals: { status: :complet }
  .col-md-4
    =# Action box
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = fa_icon "gears ccc"
          Actions
      .panel-body
        = render partial: 'actions'
    =# Last attachments
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = fa_icon "file-text ccc"
          Derniers fichiers importés
      .panel-body
        = render partial: 'attachments'
