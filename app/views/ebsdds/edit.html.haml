= custom_form(@ebsdd) do |f|
  %h1.underline
    Complèter l'eBSDD
    .pull-right
      = f.submit "Enregistrer", class: "btn btn-info"
  .container
    - if @ebsdd.errors.any?
      %div{id: "error_explanation"}
        %h2
          = pluralize(@ebsdd.errors.count, "erreur")
          ont été détecté :

        %ul
          - @ebsdd.errors.full_messages.each do |msg|
            %li
              = msg

  .row
    =# cadre 1
    .col-md-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            =# fa_icon "tags ccc"
            %span.badge 1
            Emetteur du bordereau
        .panel-body
          = render partial: "cadre1", object: f, as: :f
    =# cadre 2
    .col-md-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 2
            =# fa_icon "gears ccc"
            Installation de destination / entreposage / reconditionnement
        .panel-body
  =# Cadre 3
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 3
            Dénomination du déchet
        .panel-body

  =# Cadre 4
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 4
            Mentions au titre des règlements ADR, RID, ADNR, IMDG (le cas échéant)
        .panel-body

  =# Cadre 5
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 5
            Conditionnement:
        .panel-body

  =# Cadre 6
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 6
            Quantité
        .panel-body

  =# Cadre 7
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 7
            Négociant
        .panel-body

  =# Cadre 8
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 8
            Collecteur-transporteur
        .panel-body

  =# Cadre 9
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 9
            Déclaration générale de l’émetteur du bordereau :
        .panel-body

  .row
    =# Cadre 10
    .col-md-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 10
            Expédition reçue à l’installation de destination
        .panel-body
    =# cadre 11
    .col-md-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 11
            Réalisation de l’opération :
        .panel-body

  =# Cadre 12
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 12
            Destination ultérieure prévue
        .panel-body
