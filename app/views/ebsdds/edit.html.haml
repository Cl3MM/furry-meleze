      .col-md-6
        .panel.panel-default
          .panel-heading
            %h3.panel-title
              %span.badge 17
              Emetteur Bordereau
          .panel-body.entreposage-provisoire
            .row
              .col-md-12
                .form-group
                  = f.label :emetteur_siret, "SIRET"
                  = f.text_field :emetteur_siret, placeholder: "SIRET"

              .col-md-12
                .form-group
                  = f.label :emetteur_sortie_nom, "Nom"
                  = f.text_field :emetteur_sortie_nom, placeholder: "Nom"

              .col-md-12
                .form-group
                  = f.label :emetteur_responsable, "Contact"
                  = f.text_field :emetteur_responsable, placeholder: "Contact"
              .col-md-12
                .form-group
                  = f.label :emetteur_adresse, "Adresse"
                  = f.text_field :emetteur_adresse, placeholder: "Adresse"

            .row
              .col-md-6
                .form-group
                  = f.label :emetteur_cp, "Code postal"
                  = f.text_field :emetteur_cp, placeholder: "Code postal"

              .col-md-6
                .form-group
                  = f.label :emetteur_ville, "Ville"
                  = f.text_field :emetteur_ville, placeholder: "Ville"

            .row
              .col-md-6
                .form-group
                  = f.label :emetteur_tel, "Téléphone"
                  = f.text_field :emetteur_tel, placeholder: "Téléphone"

              .col-md-6
