    = f.text_field :nom
  .field
    = f.label :siret
    = f.text_field :siret
  .field
    = f.label :adresse
    = f.text_field :adresse
  .field
    = f.label :responsable
    = f.text_field :responsable
  .field
    = f.label :cp
    = f.text_field :cp
  .field
    = f.label :ville
    = f.text_field :ville
  .field
    = f.label :tel
    = f.text_field :tel
  .field
    = f.label :fax
    = f.text_field :fax
  .field
    = f.label :email
    = f.text_field :email
