.row
  .col-md-12
    .form-group
      = f.label :producteur_id, "Producteur", class: "disabled"
      %br
      .input-group
        = f.select :producteur_id, Producteur.all.asc(:nom).map{ |p| [p.nom, p.id] }, prompt: "Sélectionnez un producteur..."
        %span.input-group-btn
          %a.btn.btn-primary{href: "#{new_producteur_path}", target: "_blank" } Nouveau


#producteur.panel-group
  .panel.panel-default.panel-info
    .panel-heading
      %h4.panel-title
        %a{"data-toggle"=>"collapse", href: "#producteur_infos" }
          Informations détaillées
    #producteur_infos.collapse.panel-body
      .row
        .col-md-12
          .form-group
            %label SIRET
            = text_field_tag :producteur_siret, nil, placeholder: "SIRET", class: "disabled form-control"
        .col-md-12
          .form-group
            %label Nom
            = text_field_tag :producteur_nom, nil, placeholder: "Nom", class: "disabled form-control"


        .col-md-12
          .form-group
            %label Contact
            = text_field_tag :producteur_responsable, nil, placeholder: "Contact", class: "disabled form-control"
        .col-md-12
          .form-group
            %label Adresse
            = text_field_tag :producteur_adresse, nil, placeholder: "Adresse", class: "disabled form-control"

        .col-md-12
          .form-group
            %label Code postal
            = text_field_tag :producteur_cp, nil, placeholder: "Code postal", class: "disabled form-control"

        .col-md-12
          .form-group
            %label Ville
            = text_field_tag :producteur_ville, nil, placeholder: "Ville", class: "disabled form-control"

      .row
        .col-md-6
          .form-group
            %label Téléphone
            = text_field_tag :producteur_tel, nil, placeholder: "Téléphone", class: "disabled form-control"

        .col-md-6
          .form-group
            %label Fax
            = text_field_tag :producteur_fax, nil, placeholder: "Fax", class: "disabled form-control"

      .row
        .col-md-12
          .form-group
            %label Adresse email
            = text_field_tag :producteur_email, nil, placeholder: "Adresse email", class: "disabled form-control"



