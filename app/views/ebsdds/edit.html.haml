= custom_form(@ebsdd) do |f|
  %h1.underline
    = fa_icon "tags"
    Complèter l'eBSDD
    = content_tag :button, type: :submit, class: "btn btn-info pull-right mg-l-5" do
      = fa_icon "save lg"
      &nbsp;Enregistrer les modifications
    = content_tag :button, type: :submit, class: "btn btn-warning pull-right" do
      = fa_icon "cloud-download lg"
      &nbsp;Exporter au format CSV
  - if @ebsdd.errors.any?
    .row
      .col-md-12
        .alert.alert-danger.alert-dismissable
          %button.close{ type: "button", "data-dismiss" => "alert", "aria-hidden" => "true"} &times;
          %div{id: "error_explanation"}
            %h2
              Merci de corriger
              = @ebsdd.errors.count > 1 ? "les" : "le"
              = pluralize(@ebsdd.errors.count, "erreur")
              = @ebsdd.errors.count > 1 ? "suivantes :" : "suivante :"
            %ul
              - @ebsdd.errors.full_messages.each do |msg|
                %li
                  = msg
  .row
    =# cadre 1
    .col-md-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            =# fa_icon "tags ccc"
            %span.badge 1
            Emetteur du bordereau
        .panel-body
          = render partial: "cadre1", object: f, as: :f
    =# cadre 2
    .col-md-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 2
            =# fa_icon "gears ccc"
            Installation de destination / entreposage / reconditionnement
        .panel-body
          = render partial: "cadre2", object: f, as: :f
  =# Cadre 3
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 3
            Dénomination du déchet
        .panel-body
          = render partial: "cadre3", object: f, as: :f

  =# Cadre 4
