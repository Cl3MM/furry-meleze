%h1.underline
  = fa_icon "tags"
  eBSDD
  %span.small
    ="##{@ebsdd.bordereau_id}"
  = fa_link_to edit_ebsdd_path(@ebsdd), "Modifier cet eBSDD", "edit lg", class: "btn btn-info pull-right"
  = fa_link_to ebsdd_download_path, "Exporter au format CSV", "cloud-download lg", class: "btn btn-warning pull-right mg-r-5"

.container

.row
  =# cadre 1
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          =# fa_icon "tags ccc"
          %span.badge 1
          Emetteur du bordereau
      .panel-body
  =# cadre 2
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %span.badge 2
          =# fa_icon "gears ccc"
          Installation de destination / entreposage / reconditionnement
      .panel-body
=# Cadre 3
.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %span.badge 3
          Dénomination du déchet
      .panel-body
        %label Dénomination usuelle
        = DechetDenomination[@ebsdd.dechet_denomination]
        %br
        %label Consistance
        = @ebsdd.dechet_consistance
=# Cadre 4
.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %span.badge 4
          Mentions au titre des règlements ADR, RID, ADNR, IMDG (le cas échéant)
      .panel-body

=# Cadre 5
.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %span.badge 5
          Conditionnement:
      .panel-body

