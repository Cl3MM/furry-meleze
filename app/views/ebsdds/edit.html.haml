                  = f.text_field :ligne_flux_cp, placeholder: "Code postal"

              .col-md-6
                .form-group
                  = f.label :ligne_flux_ville, "Ville"
                  = f.text_field :ligne_flux_ville, placeholder: "Ville"

            .row
              .col-md-6
                .form-group
                  = f.label :ligne_flux_tel, "Téléphone"
