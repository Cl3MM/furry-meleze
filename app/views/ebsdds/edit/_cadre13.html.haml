    .form-group
      = f.label :entreposage_siret, "SIRET"
      = f.text_field :entreposage_siret, placeholder: "SIRET"

  .col-md-12
    .form-group
      = f.label :entreposage_nom, "Nom"
      = f.text_field :entreposage_nom, placeholder: "Nom"

  .col-md-12
    .form-group
      = f.label :entreposage_responsable, "Contact"
      = f.text_field :entreposage_responsable, placeholder: "Contact"
  .col-md-12
    .form-group
      = f.label :entreposage_adresse, "Adresse"
      = f.text_field :entreposage_adresse, placeholder: "Adresse"

  .col-md-12
    .form-group
      = f.label :entreposage_cp, "Code postal"
      = f.text_field :entreposage_cp, placeholder: "Code postal"

  .col-md-12
    .form-group
      = f.label :entreposage_ville, "Ville"
      = f.text_field :entreposage_ville, placeholder: "Ville"

.row
  .col-md-6
    .form-group
      = f.label :entreposage_tel, "Téléphone"
      = f.text_field :entreposage_tel, placeholder: "Téléphone"

  .col-md-6
    .form-group
      = f.label :entreposage_fax, "Fax"
      = f.text_field :entreposage_fax, placeholder: "Fax"

.row
  .col-md-12
    .form-group
      = f.label :entreposage_poids, "Quantité présentée"
      = f.text_field :entreposage_poids, placeholder: "Quantité présentée"
.row
  .col-md-6
    .form-group
      = f.label :entreposage_email, "Adresse email"
      = f.text_field :entreposage_email, placeholder: "Adresse email"
  .col-md-6
    .form-group
      = f.label :entreposage_type_quantite, "Type de quantité"
      %br
      %label.radio-inline
        = f.radio_button :entreposage_type_quantite, "R", checked: true
        Réelle
