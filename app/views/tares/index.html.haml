    -#%th
    -#%th

  -#- @tares.each do |tare|
    -#%tr
      -#%td= tare.nom
      -#%td= tare.poids
      -#%td= link_to 'Show', tare
      -#%td= link_to 'Edit', edit_tare_path(tare)
      -#%td= link_to 'Destroy', tare, :method => :delete, :data => { :confirm => 'Are you sure?' }

-#%br

