    .form-group
      = f.label :entreposage_date_presentation, "Date présentation"
      = f.text_field :entreposage_date_presentation, placeholder: "Date présentation", class: "datepicker", value: safe_date(:entreposage_date_presentation)
.row
  .col-md-12
    .form-group
      = f.label :entreposage_date, "Date"
      = f.text_field :entreposage_date, placeholder: "Date", class: "datepicker", value: safe_date(:entreposage_date)
