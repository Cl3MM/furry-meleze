    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 4
            Mentions au titre des règlements ADR, RID, ADNR, IMDG (le cas échéant)
        .panel-body
          = render partial: "cadre4", object: f, as: :f

  =# Cadre 5
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %span.badge 5
            Conditionnement
        .panel-body
          = render partial: "cadre5", object: f, as: :f

  =# Cadre 6
