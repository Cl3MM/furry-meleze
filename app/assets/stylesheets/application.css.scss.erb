/* Navbar theme specific values */
body {
  padding-top: 20px;
  padding-bottom: 20px;
  background-attachment: scroll;
  background-clip: border-box;
  background-color: rgb(233, 233, 233);
  background-image: url(<%= asset_path 'tiny_grid.png' %>);
  background-origin: padding-box;
  background-size: auto;
}

.navbar {
  margin-bottom: 40px;
}

span.glyphicon.glyphicon-leaf.brand {
}
a.navbar-brand {
  color: #585858 !important;
  font-size: 13pt;
  font-weight: bolder;
}
.margin-top-30 {
  margin-top: 30px;
}
.margin-top-40 {
  margin-top: 40px;
}
h1 {
  margin-top: 5px;
  margin-bottom: 20px;
}
.underline {
  border-bottom: 1px solid #dddddd;
  padding-bottom: 5px;
}
.fa-margin-right-4 { margin-right: 4px; }
.actions {
  min-width: 150px;
  width: 150px;
  text-align: center;
}
.panel-heading {
  @include gradient-vertical(#FAFAFA, #E9E9E9);
