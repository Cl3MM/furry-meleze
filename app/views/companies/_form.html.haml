= custom_form (@company) do |f|
  - if @company.errors.any?
    .row
      .col-md-12
        .alert.alert-danger.alert-dismissable
          %button.close{ type: "button", "data-dismiss" => "alert", "aria-hidden" => "true"} &times;
          #error_explanation
            %h2
              Merci de corriger
              - if @company.errors.count > 1
                les #{@company.errors.count} erreurs suivantes :
              - else
                l'erreur suivante :
            %ul
              - @company.errors.full_messages.each do |msg|
                %li= msg

  .row
    .col-md-6
      .form-group
        = f.label :nom
        = f.text_field :nom
    .col-md-6
      .form-group
        = f.label :siret
        = f.text_field :siret

  .row
    .col-md-12
      .form-group
        = f.label :adresse
        = f.text_field :adresse

  .row
    .col-md-6
      .form-group
        = f.label :cp
        = f.text_field :cp

    .col-md-6
      .form-group
        = f.label :ville
        = f.text_field :ville
  .row
    .col-md-12
      .form-group
        = f.label :responsable
        = f.text_field :responsable
  .row
    .col-md-6
      .form-group
        = f.label :tel
        = f.text_field :tel

    .col-md-6
      .form-group
        = f.label :fax
        = f.text_field :fax

  .row
    .col-md-12
      .form-group
        = f.label :email
        = f.text_field :email

  - if @company.is_a? Collecteur
    #collecteur
      = render :partial => "collecteurs/custom_form", object: f, as: :f

  .row
    .col-md-6.col-md-offset-4
      = link_to 'Retour', @company.class, class: "btn btn-default"
      = content_tag :button, type: :submit, class: "btn btn-primary" do
        Enregistrer les modifications&nbsp;
        = fa_icon "save lg"
      = link_to 'Voir le profil', polymorphic_path(@company), class: "btn btn-default"

