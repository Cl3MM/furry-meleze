                  = f.label :emetteur_fax, "Fax"
                  = f.text_field :emetteur_fax, placeholder: "Fax"

            .row
              .col-md-12
                .form-group
                  = f.label :emetteur_email, "Adresse email"
                  = f.text_field :emetteur_email, placeholder: "Adresse email"
      .col-md-6
        .panel.panel-default
          .panel-heading
            %h3.panel-title
              Ligne flux de déchet
          .panel-body.entreposage-provisoire
            .row
              .col-md-12
                .form-group
                  = f.label :ligne_flux_siret, "SIRET"
                  = f.text_field :ligne_flux_siret, placeholder: "SIRET"

              .col-md-12
                .form-group
